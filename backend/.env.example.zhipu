# 智谱AI配置示例
# 复制此文件为 .env 并填入实际的API密钥

# 智谱AI API配置 (必需)
ZHIPUAI_API_KEY=your_zhipuai_api_key_here

# 智谱AI模型配置 (可选)
ZHIPUAI_DEFAULT_MODEL=glm-4-flash
ZHIPUAI_BASE_URL=https://open.bigmodel.cn/api/paas/v4
ZHIPUAI_TIMEOUT=30
ZHIPUAI_MAX_RETRIES=3

# 应用基础配置
APP_NAME=Data Agent Backend
ENVIRONMENT=development
DEBUG=true

# 数据库配置
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dataagent

# MinIO配置 (如果使用)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_SECURE=false

# ChromaDB配置 (如果使用)
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=knowledge_base

# Redis缓存配置 (可选，用于分布式缓存)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false
REDIS_MAX_CONNECTIONS=10

# Clerk认证配置 (如果使用)
CLERK_JWT_PUBLIC_KEY=your_clerk_public_key
CLERK_DOMAIN=clerk.accounts.dev

# API配置
API_V1_PREFIX=/api/v1

# 其他配置
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20