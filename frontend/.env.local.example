# Data Agent V4 - Frontend Environment Variables Template
# 复制此文件为 .env.local 并填入真实值
#
# 重要安全提醒：
# 1. 绝不要将包含真实密钥的 .env.local 文件提交到版本控制系统
# 2. 环境变量必须以 NEXT_PUBLIC_ 开头才能在浏览器中访问
# 3. 生产环境构建时，这些值会被硬编码到构建产物中

# ===================================================================
# API 配置
# ===================================================================
# 后端 API 服务地址
NEXT_PUBLIC_API_URL=http://localhost:8004/api/v1

# API 请求超时时间 (毫秒)
NEXT_PUBLIC_API_TIMEOUT=30000

# ===================================================================
# 应用基础配置
# ===================================================================
# 应用名称
NEXT_PUBLIC_APP_NAME=Data Agent V4

# 应用版本
NEXT_PUBLIC_APP_VERSION=1.0.0

# 环境标识
NEXT_PUBLIC_ENVIRONMENT=development

# 应用描述
NEXT_PUBLIC_APP_DESCRIPTION=智能数据代理和分析平台

# ===================================================================
# 功能开关
# ===================================================================
# 启用开发工具
NEXT_PUBLIC_ENABLE_DEV_TOOLS=true

# 启用性能监控
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# 启用错误报告
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false

# 启用用户分析
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ===================================================================
# UI 配置
# ===================================================================
# 主题模式: 'light' | 'dark' | 'system'
NEXT_PUBLIC_THEME_MODE=system

# 默认语言
NEXT_PUBLIC_DEFAULT_LANGUAGE=zh-CN

# 支持的语言列表 (逗号分隔)
NEXT_PUBLIC_SUPPORTED_LANGUAGES=zh-CN,en-US

# ===================================================================
# 认证配置 (Clerk托管认证服务)
# ===================================================================
# Clerk 认证配置 (必需)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Clerk 应用配置
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/
NEXT_PUBLIC_CLERK_REDIRECT_URL=/

# Clerk 域名配置 (开发环境使用 clerk.accounts.dev)
NEXT_PUBLIC_CLERK_DOMAIN=clerk.accounts.dev

# Clerk 主题和外观
NEXT_PUBLIC_CLERK_THEME=light
NEXT_PUBLIC_CLERK_PRIMARY_COLOR=#000000

# 可选：支持其他认证提供商作为备选
# Auth0 认证配置
# NEXT_PUBLIC_AUTH0_DOMAIN=your-domain.auth0.com
# NEXT_PUBLIC_AUTH0_CLIENT_ID=your_auth0_client_id_here

# Firebase 认证配置
# NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
# NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
# NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id_here

# ===================================================================
# 智能功能配置
# ===================================================================
# 默认 AI 模型
NEXT_PUBLIC_DEFAULT_AI_MODEL=glm-4

# 最大对话历史长度
NEXT_PUBLIC_MAX_CONVERSATION_HISTORY=50

# 流式响应配置
NEXT_PUBLIC_ENABLE_STREAM_RESPONSE=true

# ===================================================================
# 文件上传配置
# ===================================================================
# 最大文件上传大小 (字节)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# 支持的文件类型 (逗号分隔)
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,doc,docx,txt,md

# 文件上传并发数
NEXT_PUBLIC_UPLOAD_CONCURRENCY=3

# ===================================================================
# 开发和调试配置
# ===================================================================
# 显示调试信息
NEXT_PUBLIC_SHOW_DEBUG_INFO=false

# 控制台日志级别: 'error' | 'warn' | 'info' | 'debug'
NEXT_PUBLIC_LOG_LEVEL=warn

# API 响应时间监控阈值 (毫秒)
NEXT_PUBLIC_SLOW_API_THRESHOLD=2000

# ===================================================================
# 第三方服务配置 (可选)
# ===================================================================
# Google Analytics
# NEXT_PUBLIC_GA_TRACKING_ID=GA-XXXXXXXXXX

# Sentry 错误追踪
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn-here

# Hotjar 用户行为分析
# NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id_here

# ===================================================================
# 缓存配置
# ===================================================================
# 启用浏览器缓存
NEXT_PUBLIC_ENABLE_BROWSER_CACHE=true

# 缓存过期时间 (秒)
NEXT_PUBLIC_CACHE_EXPIRY=3600

# ===================================================================
# WebSocket 配置 (如果使用实时功能)
# ===================================================================
# WebSocket 连接地址
# NEXT_PUBLIC_WS_URL=ws://localhost:8004/ws

# 心跳间隔 (秒)
NEXT_PUBLIC_WS_HEARTBEAT_INTERVAL=30

# ===================================================================
# CDN 和资源优化
# ===================================================================
# 静态资源 CDN 地址 (可选)
# NEXT_PUBLIC_CDN_URL=https://your-cdn-domain.com

# 图片优化配置
NEXT_PUBLIC_ENABLE_IMAGE_OPTIMIZATION=true

# 代码分割配置
NEXT_PUBLIC_ENABLE_CODE_SPLITTING=true